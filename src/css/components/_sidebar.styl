.Sidebar {
    position: absolute;
    width: 100%;
    transform: translateY(-100%);
    transition: transform .35s cubic-bezier(0.95, 0.05, 0.795, 0.035);
    z-index: 2;

    &&--visible {
        transform: translateY(0);
    }
}

.Sidebar-container {
    width: 100%;
    height: 100vh;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    padding: .5rem 1rem;
    background-color: grey.light;
}
