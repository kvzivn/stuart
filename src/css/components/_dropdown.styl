.Dropdown-wrapper {
    position: relative;
    display: inline-block;
}

.Dropdown {
    position: absolute;
    width: 150px;
    left: 0;
    opacity: 0;
    pointer-events: none;
    padding: 1rem 0 .5rem;
    transform: translateY(0) scaleY(0);
    transform-origin: top;
    transition: opacity .15s ease-in,
                transform .15s ease-out;
    text-align: left;
    background-color: white.main;
    border-radius: 3px;
    box-shadow: 0px 2px 10px 2px rgba(0, 0, 0, .2);

    &:after {
        content: "";
        display: block;
        position: absolute;
        top: -7px;
        left: 24px;
        border-left: 7px solid transparent;
        border-right: 7px solid transparent;
        border-bottom: 7px solid #fff;
    }

    .active & {
        opacity: 1;
        pointer-events: auto;
        transform: translateY(10px) scaleY(1);
        transition: opacity .175s ease-in,
                    transform .175s ease-out;

        .Dropdown-item {
            opacity: 1;
            transform: scale(1);
            transition: opacity .175s ease-in-out,
                        transform .175s ease-in-out;

            for i in 1..5 {
                &:nth-child({i}) {
                    transition-delay: i * .015s;
                }
            }
        }
    }
}

.Dropdown-list {
    list-style: none;
}

.Dropdown-item {
    position: relative;
    display: flex;
    justify-content: left;
    align-items: center;
    opacity: 0;
    margin: 0 1rem;
    padding: .2rem 0;
    color: grey.dark;
    cursor: pointer;
    transform: scale(.5);
    vertical-align: middle;

    &:nth-of-type(3) {
        padding: .2rem 0 .5rem;
    }

    &:nth-of-type(4) {
        padding: .5rem 0 .2rem;
        border-top: 1px solid grey.light;
    }

    &:hover {
        color: grey.main;
    }
}

.Dropdown-link {
    color: inherit;
}

.Dropdown-trigger {
    display: flex;
    align-items: center;
}

.Dropdown-icon {
    margin-left: .5rem;
    width: 12px;
    height: 12px;
}
